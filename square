#include<stdio.h>
int square (int n); //declaring the square function

int main(void)
{
    int a;
    printf("Enter the number to be squared : ");
    scanf("%d",&a);
    
    //using switch statement
    switch (a)
    {
        case 0:
        case 1:
            printf("Really?\nOkay\nIt's [%d] itself.", a); 
            break;

        default:
            printf("%d squared is [%d]\n",a,square(a));
            break;
    }
}

//Defining Square Function
int square (int n)
{
    return n*n;
}

// End of the Program.
