// program to calculate a factorial
#include<stdio.h>
#include<stdlib.h>
int factorial (int i);
int main(void)
{
    int n;
    printf("Which number's factorial? \nAnswer:  ");
    scanf("%d",&n);
    if (n<0)
    {
        printf("Negative number Error. Factorials exist only for Positive Numbers\n");
        exit(0);
    }
    printf("%d", factorial(n));
}

int factorial (int i)
{
   if (i == 0)
   {
       return 1;
   }

   return i * factorial(i-1);
}
