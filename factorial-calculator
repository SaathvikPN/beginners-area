// C program to calculate the factorial of number
#include<stdio.h>
#include<stdlib.h>
int factorial (int i);
int main(void)
{
    int n;
    printf("Enter number into Factorial Calculator :  ");
    scanf("%d",&n);
    while (n<0)
    {
        printf("Negative number Error. Factorials exist only for Positive Numbers\nPlease enter Non-negative number\n");
        scanf("%d",&n);
    };
    printf("%d", factorial(n));
}

int factorial (int i)
{
   if (i == 0)
   {
       return 1;
   }

   return i * factorial(i-1);
}
