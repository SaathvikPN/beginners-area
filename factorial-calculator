// C program to calculate factorial of a number
#include<stdio.h>
int factorial (int i);
int main(void)
{
    int n;
    printf("Enter the number to calculate its factorial : ");
    scanf("%d",&n);
    printf("%d", factorial(n));
}

int factorial (int i)
{
   if (i == 0)
   {
       return 1;
   }

   return i * factorial(i-1);
}
